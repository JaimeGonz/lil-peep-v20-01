  <div class="header-desktop__cart">
    <span class="header-desktop__cart__counter">Cart
      {{ cart.item_count }}</span>
    <a class="header-desktop__cart-icon">
      {{section.settings.cart_icon | img_url: '20x' | img_tag}}
    </a>
