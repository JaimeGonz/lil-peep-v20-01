      "id": "image_logo",
      "label": "Image logo"
    }, {
      "type": "image_picker",
      "id": "cart_icon",
      "label": "Cart icon"
    }, {
      "type": "image_picker",
      "id": "menu_icon",
      "label": "Menu icon"
    }
  ]
}

{% endschema %}
